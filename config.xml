<?xml version='1.0' encoding='utf-8'?>
<widget id="org.sys_apps.SysInfo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SysInfo</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">Apache Cordova Team</author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- Autorisations pour la batterie -->
    <feature name="Battery">
        <param name="android-package" value="org.apache.cordova.BatteryListener" />
    </feature>

    <!-- Autorisations pour la géolocalisation -->
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.GeoBroker" />
    </feature>

    <!-- Autorisations pour le réseau -->
    <access origin="*" />
</widget>
